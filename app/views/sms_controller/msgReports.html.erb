<tr>
   <h2>Sim Details</h2>
</tr>
<tr>
  <table border= "1">
  <tr> 
   <th>Operator name</th>
   <th>Mobile number</th>
   <th>Sim id</th>
</tr>

<% @simcard %>
<tr>
    <td><%= @simcard.operator %></td>
    <td><%= @simcard.phone_number %></td>
    <td><%= @simcard.simid %></td>
</tr>
</table>
<tr>
   <h2>Message sent</h2>
</tr>

<table border= "1">
<tr>
    <th><b>Transaction id</b></th>
    <th>Message</th>
    <th>Recipient name</th>
    <th>Sending date</th>
    <th>Sending Time</th>
</tr>

<% @sendmessage %>
<tr>
    <td><%= @sendmessage.id %></td>
    <td><%= @sendmessage.message_text %></td>
    <td><%= @sendmessage.recipient_number %></td>
    <td><%= @sendmessage.date %></td>
    <td><%= @sendmessage.time %></td>
</tr>
</table>

<tr>
   <h2>Message received</h2>
</tr>
<table border= "1">
<tr>
    <th><b>Transaction id</b></th>
    <th>Message</th>
    <th>Sender name</th>
    <th>Receiving date</th>
    <th>Receiving Time</th>
</tr>

<% @receivemessage %>
<tr>
    <td><%= @receivemessage.sendmessage_id %></td>
    <td><%= @receivemessage.message %></td>
    <td><%= @receivemessage.sender %></td>
    <td><%= @receivemessage.date %></td>
    <td><%= @receivemessage.time %></td>
</tr>
</table>
<tr>
   <th>Response time</th>
   <th>Delievery status</th>
</tr>
